  </ItemGroup>

  <ItemGroup>
    <None Include="bin\Release\netstandard2.0\Abp.ZeroCore.IdentityServer4.pdb">
      <PackagePath>lib/netstandard2.0/</PackagePath>
      <Pack>true</Pack>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Abp.AutoMapper\Abp.AutoMapper.csproj" />
